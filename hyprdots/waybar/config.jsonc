    "custom/arrow_battery":{
        "format":"\ue0b2",
        "tooltip": false
    },
    "custom/arrow_clock":{
        "format":"\ue0b2",
        "tooltip": false
    },
    "custom/power": {
        "format" : "‚èª ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    }
}
